<?xml version='1.0' encoding='utf-8'?>
<widget id="com.wu.wurd" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Wurd</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="" href="http://cordova.io">
        Wurd
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <preference name="LoadUrlTimeoutValue" value="11111111" />
    <preference name="FadeSplashScreenDuration" value="1000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="ShowSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="Fullscreen" value="true" />
    <preference name="EnableViewportScale" value="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="ws://*/*" />
    <allow-navigation href="wss://*/*" />
    <allow-navigation href="data:*" />
    <platform name="android">
        <icon density="ldpi" src="res/android/icon.png" />
        <icon density="mdpi" src="res/android/icon.png" />
        <icon density="hdpi" src="res/android/icon.png" />
        <icon density="xhdpi" src="res/android/icon.png" />
        <icon density="xxhdpi" src="res/android/icon.png" />
        <icon density="xxxhdpi" src="res/android/icon.png" />
        <allow-intent href="C://*/*" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-camera" spec="^4.1.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-inappbrowser" spec="^4.0.0" />
    <plugin name="cordova-plugin-fullscreen" spec="^1.3.0" />
    <plugin name="cordova-plugin-file" spec="^6.0.2" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1" />
    <plugin name="cordova-plugin-file-opener2" spec="^3.0.5">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <plugin name="cordova-plugin-cache-clear" spec="^1.3.8" />
    <engine name="android" spec="^9.0.0" />
</widget>
